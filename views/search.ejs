<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=>, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@300&display=swap" rel="stylesheet">


    <style>
        @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@300&display=swap');
    </style>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color:rgb(242, 242, 242);">
    
<!-- nav bar -->
<!-- ===================================================== -->
<nav class="navbar navbar-expand-lg bg-light" style="font-family: 'Source Serif Pro', serif; font-size: 17pt; padding: 0px;">
  <div class="container-fluid blah" style="background-color:#17C3B2; justify-content: flex-end;">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="justify-content:flex-end; padding: 15px">
      <div class="navbar-nav">
        <a class="nav-link active" aria-current="page" href="/dashboard">Search</a>
        <a class="nav-link active" aria-current="page" href="/login">Log out</a>
      </div>
    </div>
  </div>
</nav>

   <!-- title -->
    <!-- ===================================================== -->
    <div class="col-md-12 container-fluid">
      <h1 style="margin-bottom: 30px; margin-top: 20px; font-family: 'Oswald', sans-serif; font-size: 50pt; text-align: center;">Results</h1>
    </div>

    <!-- Cards -->
<!-- ===================================================== -->
<div class="cardsDiv row">
    <% for(let result of results){ %>
    <div class="cardsDiv col" style="display:flex; justify-content: space-evenly; padding:8px;">
        <a href="/story/<%=result.dataValues.id%>" style="text-decoration:none"><div class="card" style="width: 18rem; box-shadow: 3px 3px black">
          <% if(result.dataValues.source == "Aesop's Fables") { %>
            <img src="/Assets/aesop.jpeg" height="425" class="card-img-top" alt="Alt Text"/>
          <% } else if(result.dataValues.source == "the Brothers Grimm") { %>
            <img src="/Assets/grimm.jpeg" height="425" class="card-img-top" alt="Alt Text"/>
          <%} else if(result.dataValues.source == "Perrault"){ %>
            <img src="/Assets/Perrault.jpeg" height="425" class="card-img-top" alt="Alt Text"/>
          <%} else if (result.dataValues.source == "Original"){ %>
                <img src="/Assets/original.jpg" height="425" class="card-img-top" alt="Alt Text"/>
                  <%}%>
        <div class="card-body"style="background-color:#FFE278;">
        <h5 class="card-title" style="font-family: 'Source Serif Pro', serif; text-align: center; color:black"><%= result.dataValues.title %></h5>
        </div>
        </div></a>
      </div>
        <% } %>
</div>
</body>
</html>